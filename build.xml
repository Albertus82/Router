<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>
<project name="RouterLogger" default="jar">

	<property file="src/main/resources/version.properties" />

	<target name="clean">
		<delete dir="target" />
	</target>

	<target name="compile" depends="clean">
		<mkdir dir="target/classes" />
		<javac srcdir="src/main/java" destdir="target/classes" source="1.6" target="1.6">
			<classpath>
				<fileset dir="lib">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<target name="resources">
		<copy todir="target/classes">
			<fileset dir="src/main/resources" />
		</copy>
	</target>

	<target name="lib">
		<copy todir="target/dist/lib">
			<fileset dir="lib">
				<include name="*.jar" />
				<include name="license/*.txt" />
			</fileset>
		</copy>
	</target>

	<target name="config">
		<copy file="src/main/config/routerlogger.cfg" todir="target/dist" />
	</target>

	<target name="scripts">
		<copy file="src/main/scripts/routerlogger.bat" todir="target/dist" />
		<copy file="src/main/scripts/routerlogger.sh" todir="target/dist" />
	</target>

	<target name="docs">
		<copy todir="target/dist">
			<fileset dir="">
				<include name="README*" />
				<include name="LICENSE*" />
				<include name="NOTICE*" />
			</fileset>
		</copy>
	</target>

	<target name="jar" depends="compile, resources, config, scripts, docs, lib">
		<jar destfile="target/dist/routerlogger.jar" basedir="target/classes" level="9" />
	</target>

	<target name="zip" depends="jar">
		<zip destfile="target/release/routerlogger-${version.number}-bin.zip" basedir="target/dist" level="9" />
	</target>

</project>
